<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomTabStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/btn_tab_text_selector</item>
        <item name="android:textSize">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <style name="homeLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textPrice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/color_small_box</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="井">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:text">#</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="AnimBottom">
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
    </style>

    <!--设置动画  到时候可以修改系统backKey的返回效果-->
    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
         <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
         <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
         <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
         <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
     </style>
     <style name="AnimActivityTheme" parent="Theme.AppCompat" >
         <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
     </style>


</resources>
